<RelativeLayout
    android:id="@+id/widget_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.WeatherApp.AppWidget.InnerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.WeatherApp.AppWidgetContainer"
    android:background="@color/blue_sky">


    <TextView
        android:id="@+id/widget_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="City"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_city"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:text="Day"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_day"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:text="20 *C"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_temp"
        android:layout_marginStart="16dp"
        android:text="sunny"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/widget_icon"
        android:layout_width="128dp"
        android:layout_height="80dp"
        android:layout_below="@+id/widget_day"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>